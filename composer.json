{
    "name": "gruberro/netatmo-viewer",
    "description": "A simple viewer for the major Netatmo stats displayable by a simple output device supporting HTML.",
    "type": "project",
    "license": "MIT",
    "authors": [{
        "name": "Robert Gruber",
        "email": "robert@mir-zwoa.com"
    }],
    "minimum-stability": "stable",
    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/gruberro/Netatmo-API-PHP"
    }],
    "require": {
        "silex/silex": "~2.0",
        "netatmo/netatmo-api": "^2.0@dev",
        "twig/twig": "~2.0",
        "lokhman/silex-tools": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "symfony/browser-kit": "~4.0",
        "symfony/css-selector": "~4.0"
    },
    "scripts": {
        "tests": "phpunit",
        "serve": "SILEX_ENV=prod php -S 127.0.0.1:8080 -t web"
    }
}