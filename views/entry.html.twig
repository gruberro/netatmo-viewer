{% set offline = lastSeen and date(lastSeen) <= date('-1day') %}

<tr>
    <td>
        {% if co2 %}
            {% if co2 < 1000 %}
                <span class="co2 ok" title="{{ co2 }}"></span>
            {% elseif co2 < 2000 %}
                <span class="co2 warning" title="{{ co2 }}"></span>
            {% else %}
                <span class="co2 danger" title="{{ co2 }}"></span>
            {% endif %}
        {% endif %}
    </td>
    <td>
        <span class="{{ offline ? 'offline' : '' }}">
            {{ name }}
        </span>
    </td>
    <td>
        <img src="assets/temperature.png" />
        {% if offline %}
            -
        {% else %}
            {{ temperature|number_format(1, ',', '.') }}<span class="unit">°C</span>
            <span class="temperature-trend">
                {% if temperature_trend == 'stable' %}
                    {{ '→' }}
                {% elseif temperature_trend == 'up' %}
                    {{ '↗' }}
                {% elseif temperature_trend == 'down' %}
                    {{ '↘' }}
                {% endif %}
            </span>
        {% endif %}
    </td>
    <td>
        <img src="assets/humidity.png" />
        {% if offline %}
            -
        {% else %}
            {{ humidity }}<span class="unit">%</span>
        {% endif %}
    </td>
    <td class="battery">
        {% if battery and not offline %}
            <span class="{{ battery > 20 ? 'green' : 'red' }}" style="width: {{ battery }}%">{{ battery }}%</span>
        {% endif %}
    </td>
</tr>
